<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="style_input_field">
        <item name="android:background">@drawable/shape_input_field</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="style_text_login">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="style_background_color">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="style_text_logo">
        <item name="android:fontFamily">@font/yellowtail</item>
        <item name="android:textColor">?attr/grayColor</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="style_button_login">
        <item name="android:backgroundTint">@color/customOrange</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">24sp</item>

    </style>

    <style name="style_text_in_login">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">?attr/secondaryGrayColor</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="style_divider_color">
        <item name="android:background">?attr/subSecondaryGrayColor</item>
    </style>

</resources>