<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartPharm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/customWhitePrimary</item>
        <item name="colorPrimaryVariant">@color/customWhiteSecondary</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/customGreenPrimary</item>
        <item name="colorSecondaryVariant">@color/customGreenSecondary</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="orangeColor">@color/customOrange</item>
        <item name="blueColor">@color/customBlue</item>

        <item name="subordinateWhiteColor">@color/customWhiteSubordinate</item>
        <item name="SubSecondaryWhiteColor">@color/customWhiteSubSecondary</item>


        <item name="primaryGrayColor">@color/customGrayPrimary</item>
        <item name="grayColor">@color/customGray</item>
        <item name="secondaryGrayColor">@color/customGraySecondary</item>
        <item name="subSecondaryGrayColor">@color/customGraySubSecondary</item>
        <item name="borderColor">@color/customWhitePrimaryOpposite</item>

    </style>
</resources>