<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SmartPharm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/customWhitePrimaryOpposite</item>
        <item name="colorPrimaryVariant">@color/customWhiteSecondaryOpposite</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/customGreenPrimary</item>
        <item name="colorSecondaryVariant">@color/customGreenSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="orangeColor">@color/customOrange</item>
        <item name="blueColor">@color/customBlue</item>
        <item name="subordinateWhiteColor">@color/customWhiteSubordinateOpposite</item>
        <item name="SubSecondaryWhiteColor">@color/customWhiteSubSecondaryOpposite</item>
        <item name="primaryGrayColor">@color/customGrayPrimaryOpposite</item>
        <item name="grayColor">@color/customGrayOpposite</item>
        <item name="secondaryGrayColor">@color/customGraySecondaryOpposite</item>
        <item name="subSecondaryGrayColor">@color/customGraySubSecondaryOpposite</item>
        <item name="borderColor">@color/customWhitePrimary</item>
    </style>

    <style name="ThemeOverlay.SmartPharm.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

</resources>